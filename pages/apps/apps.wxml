<!--pages/apps/apps.wxml-->
<text>九宫格显示</text>
<text>导入 weui包</text>
<view class="page">
    <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">九宫格</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="*this">
                <navigator url="../../index" class="weui-grid" hover-class="weui-grid_active" open-type="redirect" bindtap="onNavigatorTap" data-index="{{index}}">
                    <image class="weui-grid__icon" src="../images/icon_tabbar.png" />
                    <view class="weui-grid__label">{{item.app.name}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>
